{
  "name": "stoyantodorov/framework",
  "description": "Custom PHP Framework.",
  "license": "MIT",
  "support": {
    "source": "https://github.com/stoyantodorov/framework"
  },
  "authors": [
    {
      "name": "Stoyan Todorov",
      "email": "stoyan56722@gmail.com",
      "role": "Developer"

    }
  ],
  "require": {
    "php": ">=8.2.0",
    "ext-pdo": "*",
    "monolog/monolog": "^3.5",
    "nesbot/carbon": "^2.71",
    "psr/container": "^1.1.1|^2.0.1",
    "psy/psysh": "^0.11.22",
    "smarty/smarty": "^4.3",
    "symfony/console": "^6.4",
    "symfony/http-foundation": "^6.3",
    "symfony/serializer": "^6.3"
  },
  "autoload": {
    "files": [
      "src/helpers/base.php"
    ],
    "psr-4": {
      "StoyanTodorov\\Core\\": "src/"
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
